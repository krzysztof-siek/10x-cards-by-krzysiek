---
import Layout from "../../layouts/Layout.astro";
import { LoginForm } from "../../components/auth/LoginForm";
import { Toaster } from "../../components/ui/sonner";
import { isFeatureEnabled } from "../../features/featureFlags";

// Mark this page as requiring server-side rendering
export const prerender = false;

// Sprawdź czy feature flag jest włączony
const isLoginEnabled = isFeatureEnabled("auth.login");

// Przekieruj na stronę główną jeśli feature jest wyłączony
if (!isLoginEnabled) {
  return Astro.redirect("/");
}

// Przekierowanie zalogowanych użytkowników do strony z fiszkami
if (Astro.locals.user) {
  return Astro.redirect("/flashcards");
}
---

<Layout title="Logowanie - 10x Cards">
  <div class="max-w-md mx-auto p-6 bg-card border rounded-lg shadow-sm">
    <h1 class="text-2xl font-bold mb-6 text-center">Logowanie</h1>
    <LoginForm client:load />
  </div>
  <Toaster client:load />
</Layout>
