---
import Layout from "../../layouts/Layout.astro";
import { RegisterForm } from "../../components/auth/RegisterForm";
import { Toaster } from "../../components/ui/sonner";

// Mark this page as requiring server-side rendering
export const prerender = false;

// Przekierowanie zalogowanych użytkowników do strony z fiszkami
if (Astro.locals.user) {
  return Astro.redirect("/flashcards");
}
---

<Layout title="Rejestracja - 10x Cards">
  <div class="max-w-md mx-auto p-6 bg-card border rounded-lg shadow-sm">
    <h1 class="text-2xl font-bold mb-6 text-center">Rejestracja</h1>
    <RegisterForm client:load />
  </div>
  <Toaster client:load />
</Layout>
