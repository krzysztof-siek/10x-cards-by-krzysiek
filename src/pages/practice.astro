---
import Layout from "../layouts/Layout.astro";
import PracticeView from "../components/views/practice/PracticeView";
import { isFeatureEnabled } from "../features/featureFlags";

// Sprawdź czy feature flag jest włączony
const isPracticeEnabled = isFeatureEnabled("practice.view");

// Przekieruj na stronę główną jeśli feature jest wyłączony
if (!isPracticeEnabled) {
  return Astro.redirect("/");
}
---

<Layout title="Ćwiczenie fiszek">
  <div class="container py-8">
    <h1 class="text-3xl font-bold mb-6">Ćwiczenie fiszek</h1>
    <PracticeView client:load />
  </div>
</Layout>
