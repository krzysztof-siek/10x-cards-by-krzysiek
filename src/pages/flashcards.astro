---
import Layout from "../layouts/Layout.astro";
import { FlashcardsView } from "../components/flashcards";
import { Toaster } from "../components/ui/sonner";
import { isFeatureEnabled } from "../features/featureFlags";

// Mark this page as requiring server-side rendering for authentication
export const prerender = false;

// Sprawdź czy feature flag jest włączony
const isFlashcardsEnabled = isFeatureEnabled("flashcards.view");

// Przekieruj na stronę główną jeśli feature jest wyłączony
if (!isFlashcardsEnabled) {
  return Astro.redirect("/");
}

// Ensure page is protected for authenticated users only
if (!Astro.locals.user) {
  return Astro.redirect("/auth/login");
}
---

<Layout title="10x-cards - Moje fiszki">
  <h1 class="text-3xl font-bold mb-8 text-center">Moje fiszki</h1>
  <FlashcardsView client:load />
  <Toaster client:load />
</Layout>
